<div class="container">
     <header class="header clearfix">
       <nav>
          <ul class="nav nav-pills float-right">
            <li class="nav-item">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
          {{#if isAuthenticated}}
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          {{/if}}
          
          </ul>
        </nav>
        <h3 class="text-muted">Grocery Price Tracker</h3>
      </header>

    <h4>Add a pricing</h4>
    <form id="addpricing" action="/pricing" method="post">
    
      <div class="form-group">
        <label for="item">Select an item</label>
        <select class="form-control" id="item" name="item" size="8" required>
          {{#each item}}
              <option value='{"item_id":"{{item_id}}","item_name":"{{item_name}}"}'>{{item_name}}</option>
          {{/each}}
        </select>
      </div>
      
      <div class="form-group">
        <label for="store">Select a store</label>
        <select class="form-control" id="store" name="store" size="8" required>
          {{#each store}}
              <option value='{"store_id":"{{store_id}}","store_name":"{{store_name}}"}'>{{store_name}}</option>
          {{/each}}
        </select>
      </div>
      
      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Item Price (USD)</label>
        <div class="col-sm-5 input-group">
          <span class="input-group-addon">$</span>
          <input type="number" min="0.00" step="0.01" max="9999999999999" class="form-control" id="price" name="price" placeholder="Enter item price (required)" required>
        </div>
      </div>
      
      <br>
      <button type="submit" class="btn btn-primary">Add pricing</button>
      <button type="button" class="btn btn-secondary" onclick="location.href='/pricing'">Back</button>
    </form>
    
</div>